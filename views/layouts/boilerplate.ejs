      const priceInput = document.getElementById('price');
      const input = document.querySelector('#title');


      priceInput.addEventListener('input', () => {
        priceInput.value = priceInput.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');
      });
    
      const form = document.querySelector('.validated-form');
      const inputs = form.querySelectorAll('input[required], textarea[required]');
    
      inputs.forEach(input => {
  input.addEventListener('blur', () => {
    if (input.value.trim() === '') {
      input.classList.remove('is-valid');
      input.classList.add('is-invalid');
      if (!input.hasAttribute('data-error-shown')) {
        input.insertAdjacentHTML('afterend', '<div class="invalid-feedback">This field is required!</div>');
        input.setAttribute('data-error-shown', 'true');
        setTimeout(() => input.nextElementSibling.classList.add('fade'), 9000);
      }
    } else {
      input.classList.remove('is-invalid');
      input.classList.add('is-valid');
      if (input.hasAttribute('data-error-shown')) {
        input.removeAttribute('data-error-shown');
        const errorElement = input.nextElementSibling;
        errorElement && errorElement.remove();
      }
    }
  });
});
</script>

